[diff]
	color = auto
	rename = copy
[pager]
	color = true
[status]
	color = true
[user]
	name = Stephen Prochnow
	email = stephen.prochnow@googlemail.com
[color]
	diff = auto
[core]
  autocrlf = input
	excludesfile = ${HOME}/.gitignore
[log]
  decorate = full
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  gpr = pull --rebase
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ffs = flow feature start
  fff = flow feature finish
	pom = push origin master
